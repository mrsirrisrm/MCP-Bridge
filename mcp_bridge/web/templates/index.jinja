{% extends "base.jinja" %}

{% block content %}
<div class="row">
    <div class="col-md-6">
        <h2>Servers</h2>
        {% for server in servers %}
        <div class="card server-card {% if not server.enabled %}disabled{% endif %}" id="server-{{ server.name }}">
            <div class="card-body">
                <h5 class="card-title">{{ server.name }}</h5>
                <button class="btn btn-primary" onclick="toggleServer('{{ server.name }}')">
                    {% if server.enabled %}Disable{% else %}Enable{% endif %}
                </button>
            </div>
        </div>
        {% endfor %}
    </div>

    <div class="col-md-6">
        <h2>Tools</h2>
        {% for server_name, tools in tools.items() %}
        <h4>{{ server_name }}</h4>
        {% for tool in tools.tools %}
        <div class="card tool-card {% if not tool_status[tool.name] %}disabled{% endif %}" id="tool-{{ tool.name }}">
            <div class="card-body">
                <h5 class="card-title">{{ tool.name }}</h5>
                <p class="card-text">{{ tool.description }}</p>
                <button class="btn btn-primary" onclick="toggleTool('{{ tool.name }}')">
                    {% if tool_status[tool.name] %}Disable{% else %}Enable{% endif %}
                </button>
            </div>
        </div>
        {% endfor %}
        {% endfor %}
    </div>
</div>
{% endblock %}